<main role="main">
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Reviews</h1>
        </div>
      </section>
      <div class="py-5 bg-light">
        <div class="container">
          <div class="row">
            <% @reviews.each do |review| %>
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                  <%= image_tag("/assets/pet.png",  alt: "Card image cap", class: "card-img-top") %>
                  <div class="card-body">
                    <h5 class="card-title"><%= review.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><td><%= review.rating %></td></h6>
                    <%= link_to review.pet.names, review.pet, class:"btn btn-sm btn-outline-primary"%>
                    <p class="card-text"><td><%= review.user.email %></td></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <%= link_to 'Read', review, class:"btn btn-sm btn-outline-primary"%>
                        <% if user_signed_in?%>
                          <% if current_user.id == review.user.id%>
                            <%= link_to 'Edit', edit_review_path(review), class:"btn btn-sm btn-outline-secondary"%>
                            <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-sm btn-outline-secondary"%>
                          <% end %>
                        <% end %>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>