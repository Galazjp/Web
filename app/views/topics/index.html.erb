<main role="main">
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Topics</h1>
        </div>
      </section>
      <div class="py-5 bg-light">
        <div class="container">
          <div class="row">
            <% @topics.each do |topic| %>
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                  <div class="card-body">
                    <h5 class="card-title"><%= topic.name %></h5>
                    <p class="card-text"><td><%= topic.description %></td></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <%= link_to 'Reviews', topic, class:"btn btn-sm btn-outline-primary"%>
                        <% if user_signed_in?%>
                          <%= link_to 'Edit', edit_topic_path(topic), class:"btn btn-sm btn-outline-secondary"%>
                          <%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-outline-secondary" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
</main>

<footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <%= link_to 'New Topic', new_topic_path, class:"btn btn-primary my-2"%>
      </p>
    </div>
</footer>

