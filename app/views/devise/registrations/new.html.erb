<div class="card text-center">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "form-signin") do |f| %>
      <h1 class="card-title">Sign Up</h1>
      <div class="field">
        <%= f.label :email, :class => "sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"form-control", :placeholder => "Email address" %>
      </div>
      <div class="field">
        <%= f.label :password, :class => "sr-only"%>
        <%= f.password_field :password, autocomplete: "new-password", :class =>"form-control", :placeholder => "Password"  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>
      <div class="field">
        <%= f.label :password_confirmation, :class => "sr-only" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class =>"form-control", :placeholder => "Confirm Password"  %>
      </div>
      <div class="actions">
        <%= f.submit "Sign Up", :class => "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>

    <%= devise_error_messages! %>
    <%= render "devise/shared/links" %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
</div>